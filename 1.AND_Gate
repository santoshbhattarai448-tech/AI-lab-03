import numpy as np


X = np.array([[0,0],[0,1],[1,0],[1,1]])
y = np.array([0,0,0,1])


w = np.zeros(2)
b = 0
lr = 0.1


for _ in range(10):
    for i in range(len(X)):
        output = np.dot(X[i], w) + b
        pred = 1 if output > 0 else 0
        error = y[i] - pred
        w += lr * error * X[i]
        b += lr * error

print("Weights:", w)
print("Bias:", b)


for x in X:
    print(x, "->", 1 if np.dot(x,w)+b > 0 else 0)
